<tr class=<%= cycle('bg-green-100','bg-white')%> id="<%= dom_id product %>">
  <td class="px-2 py-3">
    <%= image_tag(product.image_url,class:'w-40') %>
  </td>
  <td>
    <h1 class="text-xl font-bold mb-3">
      <%= product.title %>
    </h1>
    <p>
      <%= truncate(strip_tags(product.description),length:80) %>
    </p>
  </td>
  <td class="px-3">
    <ul>
      <li>
        <%= link_to 'Show',product,class:'hover:underline' %>
      </li>
      <li><%= link_to 'Edit', edit_product_path(product),class:'hover:underline'%></li>
      <li> <%= button_to 'Destroy', product,method: :delete %> </li>
    </ul>
  </td>
</tr>
